<h1><%= @user.username %>'s Running Log: </h1>

<%if @user.runs.empty? %>
  <p>
     You don't have any runs recorded yet.
  </p>
<%else%>
  <% @user.runs.each do |run| %>
    <ul class="run-log">
      <strong><li>Description: <a href="/runs/<%=run.id%>"><%= run.description %></a></li></strong>
      <li>Run Time: <%= run.time %> minutes</li>
      <li>Run Distance: <%= run.distance %> miles</li>
    </ul>
  <%end%>
<%end%>
