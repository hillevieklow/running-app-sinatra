<%if @user == current_user %>
  <h1>Your Running Log: </h1>
 <%else%>
   <h1><%= @user.username %>'s Running Log: </h1>
 <%end%>

<%if @user.runs.empty? %>
  <p>
     <%if @user == current_user %>
       <p>You don't have any runs recorded yet.</p>
      <%else%>
        <p><%=@user.username %> don't have any runs recorded yet.</p>
      <%end%>
  </p>
<%else%>
  <% @user.runs.each do |run| %>
    <ul class="run-log">
      <strong><li>Description: <a href="/runs/<%=run.id%>"><%= run.description %></a></li></strong>
      <li>Run Time: <%= run.time %> minutes</li>
      <li>Run Distance: <%= run.distance %> miles</li>
    </ul>
  <%end%>
<%end%>
